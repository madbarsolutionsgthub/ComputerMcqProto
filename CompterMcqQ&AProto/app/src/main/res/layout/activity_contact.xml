<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contactus.ContactUsActivity">

    <TextView
        android:id="@+id/sdsd"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="www.madbarsoft.com"
        android:background="@color/cardview_light_background"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:background="@color/cardview_light_background"
        android:padding="10dp">



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <madbarsoft.com.computershortquestionforitjob.utility.TextView_Lato
                            android:id="@+id/emailTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/colorGray"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <madbarsoft.com.computershortquestionforitjob.utility.Textview_lato_thin
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="madbarsoft.com"
                            android:textColor="@color/colorLightGray"
                            android:textSize="14dp" />
                        <madbarsoft.com.computershortquestionforitjob.utility.TextView_Lato
                            android:id="@+id/categoryNameHolderId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Facbook"
                            android:textColor="@color/colorGray"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <madbarsoft.com.computershortquestionforitjob.utility.Textview_lato_thin
                            android:id="@+id/currentStatusId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="madbarsoft.com"
                            android:textColor="@color/colorLightGray"
                            android:textSize="14dp" />





                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>




    </ScrollView>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnHomeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/home"
                android:background="@color/colorOrange"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:layout_weight="1.0"
                android:textSize="24sp"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>