<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">


    <TextView
        android:id="@+id/questionTitleId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="@string/short_content"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mcqAnswerListHolderId"
        android:layout_width="match_parent"
        android:layout_below="@+id/questionTitleId"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="@string/short_content"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/show_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mcqAnswerListHolderId"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/arrow_down"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="Ans"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_more"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:text="@string/long_content"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>
