<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".test.McqTestFinishFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="7dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="5">
                <View
                    android:layout_width="5dp"
                    android:layout_height="100dp"
                    android:background="@color/colorPrimary"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <madbarsoft.com.computershortquestionforitjob.utility.TextView_Lato
                        android:id="@+id/categoryNameHolderId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Successfully complete Text"
                        android:textColor="@color/colorGray"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <madbarsoft.com.computershortquestionforitjob.utility.Textview_lato_thin
                        android:id="@+id/currentStatusId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Data Scientist"
                        android:textColor="@color/colorLightGray"
                        android:textSize="10dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <madbarsoft.com.computershortquestionforitjob.utility.TextView_Lato
            android:id="@+id/examStatusId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Here Will Be Category Title"
            android:textColor="@color/colorGray"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnHomeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/home"
                android:background="@color/colorOrange"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:layout_weight="1.0"
                android:textSize="24sp"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>