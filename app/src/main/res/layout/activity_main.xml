<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/homePageFrameLayoutId"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
                <madbarsoft.com.computershortquestionforitjob.utility.Textview_lato_thin
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:gravity="center"
                    android:text="Retain and Viba Short Question and Answer \nAbout Computer for IT Job"
                    android:textColor="#ffff"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <GridView
        android:id="@+id/homePageWithGridViewId"
        android:layout_below="@+id/homePageFrameLayoutId"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:numColumns="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="#04b4a8"
        android:dividerHeight="4dp"
        android:divider="#33ed0f0f">

    </GridView>
</RelativeLayout>